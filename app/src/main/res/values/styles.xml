<resources>

    <!-- Base application theme. -->
    <style name="MyTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myPrimary</item>
        <item name="colorPrimaryDark">@color/myPrimaryDark</item>
        <item name="colorAccent">@color/myAccent</item>
    </style>




   <style name="TextStyle" parent="TextAppearance.AppCompat.Display1">
       <item name="android:inputType">textCapSentences|textMultiLine</item>
       <item name="fontFamily">@font/roboto_mono</item>
   </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="LoginStyle" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



</resources>
